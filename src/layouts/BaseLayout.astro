---
// TODO: Uncomment when @gettymade/construct is published to npm
// import '@gettymade/construct/styles';
import '../styles/theme.css';
import { SiteHeader } from '../components/SiteHeader';
import { SiteFooter } from '../components/SiteFooter';
import { ParallaxBackground } from '../components/ParallaxBackground';
import Breadcrumbs from '../components/Breadcrumbs.astro';

interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  title: string;
  description?: string;
  breadcrumbs?: BreadcrumbItem[];
}

const { title, description = "Year of the Build - Building in public, one project at a time", breadcrumbs } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - YOTB</title>
  </head>
  <body>
    <!-- Global parallax background layer -->
    <ParallaxBackground client:load />

    <!-- Sticky header for non-homepage -->
    <SiteHeader client:load variant="light" />

    {breadcrumbs && <Breadcrumbs paths={breadcrumbs} />}

    <div class="site-container">
      <main>
        <slot />
      </main>
    </div>

    <SiteFooter />
  </body>
</html>

<style>
  body {
    margin: 0;
    padding: 0;
    /* Account for sticky header height */
    padding-top: var(--header-height, 60px);
  }

  .site-container {
    max-width: var(--yotb-content-max);
    margin: 0 auto;
    padding: 0 var(--t-spacing-lg);
  }

  main {
    min-height: 60vh;
  }

  @media (max-width: 600px) {
    .site-container {
      padding: 0 var(--t-spacing-md);
    }
  }
</style>
