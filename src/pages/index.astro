import '../styles/theme.css';
import { Hero } from '../components/Hero';
import { SiteHeader } from '../components/SiteHeader';
import { SiteFooter } from '../components/SiteFooter';
import { DevlogCardGrid } from '../components/DevlogCardGrid';
import { DigestCardGrid } from '../components/DigestCardGrid';
import { ProjectCardGrid } from '../components/ProjectCardGrid';
import { ParallaxBackground } from '../components/ParallaxBackground';
import ActivityGrid from '../components/ActivityGrid.astro';
import { getCollection } from 'astro:content';
import { copy } from '../lib/copy';

const devlogs = (await getCollection('devlogs'))
  .filter(post => !post.data.isDraft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const digests = (await getCollection('digests'))
  .filter(post => !post.data.isDraft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Calculate entry numbers (oldest = 1, newest = highest)
const devlogEntryNumberMap = new Map<string, number>();
[...devlogs].reverse().forEach((post, index) => {
  devlogEntryNumberMap.set(post.slug, index + 1);
});

const digestEntryNumberMap = new Map<string, number>();
[...digests].reverse().forEach((post, index) => {
  digestEntryNumberMap.set(post.slug, index + 1);
});

const latestDevlog = devlogs[0] ? {
  title: devlogs[0].data.title,
  slug: devlogs[0].slug,
  pubDate: devlogs[0].data.pubDate,
} : null;

const allProjects = await getCollection('projects');

// Project lookup for resolving slugs to titles
const projectMap = allProjects.reduce((acc, p) => {
  acc[p.slug] = { slug: p.slug, title: p.data.title.replace(/^Project \d+: /, '') };
  return acc;
}, {} as Record<string, { slug: string; title: string }>);

// Get projects covered in a digest's week (7 days ending on pubDate)
function getDigestProjects(digestPubDate: Date) {
  const endDate = new Date(digestPubDate);
  const startDate = new Date(digestPubDate);
  startDate.setDate(startDate.getDate() - 6); // 7 day window ending on pubDate

  const projectSlugs = new Set<string>();
  devlogs.forEach(devlog => {
    const devlogDate = devlog.data.pubDate;
    if (devlogDate >= startDate && devlogDate <= endDate && devlog.data.project) {
      projectSlugs.add(devlog.data.project);
    }
  });

  return Array.from(projectSlugs)
    .map(slug => projectMap[slug])
    .filter(Boolean);
}

// Prepare data for recent digests (up to 3)
const recentDigestsData = digests.slice(0, 3).map(digest => ({
  title: digest.data.title,
  description: digest.data.description,
  slug: digest.slug,
  entryNumber: digestEntryNumberMap.get(digest.slug) ?? 1,
  pubDate: digest.data.pubDate,
  projects: getDigestProjects(digest.data.pubDate),
}));

function resolveProject(slug?: string) {
  if (!slug) return undefined;
  const project = projectMap[slug];
  return project ? [project] : undefined;
}

// Prepare data for grid components
const recentDevlogsData = devlogs.slice(0, 3).map(post => ({
  title: post.data.title,
  description: post.data.description,
  slug: post.slug,
  entryNumber: devlogEntryNumberMap.get(post.slug) ?? 1,
  pubDate: post.data.pubDate,
  projects: resolveProject(post.data.project),
}));

const projectsData = allProjects
  .filter(p => p.data.featured)
  .map(project => ({
    title: project.data.title,
    description: project.data.description,
    slug: project.slug,
    status: project.data.status,
    tags: project.data.tags,
  }));
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={copy.site.tagline} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Year of the Build</title>
  </head>
  <body>
    <!-- Global parallax background layer -->
    <ParallaxBackground client:load />

    <!-- Sticky header - appears after scrolling past hero -->
    <SiteHeader client:load showAfterHero={true} variant="light" />

    <!-- Full-viewport hero with parallax -->
    <Hero client:load latestDevlog={latestDevlog} />

    <!-- Main Content -->
    <main class="main-content">

      <!-- Mission / Intro Section -->
      <section class="intro-section">
        <div class="container">
          <div class="section-label">
            <span>About</span>
          </div>
          <div class="intro-content">
            <div class="intro-text">
              <p class="intro-headline">Hey there, I'm Alex. I make things and then write about it.</p>
              <p class="intro-body">
                Rolling devlogs + weekly digests. Follow the trainwreck.
              </p>
              <a href="/about/" class="intro-link">Learn more about the project &rarr;</a>
            </div>
            <div class="intro-right">
              <div class="intro-stats">
                <div class="stat">
                  <span class="stat-number">{allProjects.length}</span>
                  <span class="stat-label">Projects</span>
                </div>
                <div class="stat">
                  <span class="stat-number">{devlogs.length}</span>
                  <span class="stat-label">Devlogs</span>
                </div>
                <div class="stat">
                  <span class="stat-number">{digests.length}</span>
                  <span class="stat-label">Digests</span>
                </div>
              </div>
              <ActivityGrid username="alexgetty" />
            </div>
          </div>
        </div>
      </section>

      <!-- Latest Digests -->
      <section class="latest-section">
        <div class="container">
          <div class="section-header">
            <div class="section-label">
              <span>Latest Digests</span>
            </div>
            <a href="/digests/" class="view-all">View all</a>
          </div>
          <p class="section-tagline">{copy.digests.description}</p>
          {recentDigestsData.length === 0 ? (
            <p class="empty-state">{copy.empty("digests")}</p>
          ) : (
            <DigestCardGrid client:visible digests={recentDigestsData} />
          )}
        </div>
      </section>

      <!-- Latest Devlogs -->
      <section class="latest-section">
        <div class="container">
          <div class="section-header">
            <div class="section-label">
              <span>Latest Devlogs</span>
            </div>
            <a href="/devlogs/" class="view-all">View all</a>
          </div>
          <p class="section-tagline">{copy.devlogs.description}</p>
          {recentDevlogsData.length === 0 ? (
            <p class="empty-state">{copy.empty("devlogs")}</p>
          ) : (
            <DevlogCardGrid client:visible devlogs={recentDevlogsData} />
          )}
        </div>
      </section>

      <!-- Projects Section -->
      <section class="latest-section">
        <div class="container">
          <div class="section-header">
            <div class="section-label">
              <span>Featured Projects</span>
            </div>
            <a href="/projects/" class="view-all">View all</a>
          </div>
          <p class="section-tagline">{copy.projects.description}</p>
          <ProjectCardGrid client:visible projects={projectsData} columns={4} />
        </div>
      </section>

    </main>

    <!-- Full-width footer -->
    <SiteFooter />
  </body>
</html>

<style>
  body {
    margin: 0;
    padding: 0;
  }

  .main-content {
    padding-bottom: var(--t-spacing-xl);
  }

  /* =============================================================================
     Latest Sections — Consistent structure for digests/devlogs/projects
     ============================================================================= */

  .latest-section {
    padding: var(--t-spacing-xl) 0;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .section-label {
    display: flex;
    align-items: center;
    gap: var(--t-spacing-sm);
    flex: 1;
    margin-right: var(--t-spacing-lg);
    font-size: var(--t-font-size-xs);
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--text-muted);
  }

  .section-label::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--border-default);
  }

  .view-all {
    font-size: var(--t-font-size-sm);
    font-weight: 500;
    color: var(--text-secondary);
    text-decoration: none;
    white-space: nowrap;
    transition: color 0.2s ease;
  }

  .view-all:hover {
    color: var(--t-primary-600);
  }

  .section-tagline {
    font-size: var(--t-font-size-sm);
    color: var(--text-secondary);
    margin: var(--t-spacing-xs) 0 var(--t-spacing-md);
    max-width: 500px;
  }

  .empty-state {
    color: var(--text-muted);
    padding: var(--t-spacing-lg) 0;
  }

  /* =============================================================================
     Intro Section
     ============================================================================= */

  .intro-section {
    padding: var(--t-spacing-xl) 0;
    background: var(--bg-canvas);
  }

  .intro-section .section-label {
    margin-bottom: var(--t-spacing-md);
  }

  .intro-content {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--t-spacing-xl);
    align-items: start;
  }

  .intro-headline {
    font-size: var(--t-font-size-xl);
    font-weight: 700;
    line-height: var(--t-line-height-tight);
    margin-top: 0;
    margin-bottom: var(--t-spacing-sm);
    color: var(--text-primary);
  }

  .intro-body {
    font-size: var(--t-font-size-base);
    color: var(--text-secondary);
    line-height: var(--t-line-height-normal);
    margin-bottom: var(--t-spacing-md);
    max-width: 600px;
  }

  .intro-link {
    display: inline-block;
    font-size: var(--t-font-size-sm);
    font-weight: 600;
    color: var(--t-primary-600);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .intro-link:hover {
    color: var(--t-primary-700);
  }

  .intro-stats {
    display: flex;
    gap: var(--t-spacing-md);
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    background: var(--p-ink-50);
    border: 1px solid var(--p-ink-200);
    padding: var(--t-spacing-sm) var(--t-spacing-md);
    min-width: 90px;
  }

  .stat-number {
    display: block;
    font-size: var(--t-font-size-xl);
    font-weight: 700;
    line-height: 1;
    color: var(--p-ink-950);
  }

  .stat-label {
    font-size: var(--t-font-size-xs);
    font-weight: 500;
    color: var(--p-ink-500);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-top: 2px;
  }

  /* Right column — Stats + Activity stacked */
  .intro-right {
    display: flex;
    flex-direction: column;
    gap: var(--t-spacing-md);
    min-width: 0; /* Prevent grid blowout */
    max-width: 100%;
  }

  /* =============================================================================
     Responsive
     ============================================================================= */

  @media (max-width: 900px) {
    .intro-content {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 600px) {
    .intro-headline {
      font-size: var(--t-font-size-lg);
    }

    .stat {
      flex: 1;
      padding: var(--t-spacing-xs) var(--t-spacing-sm);
    }

    .stat-number {
      font-size: var(--t-font-size-lg);
    }
  }
</style>
