---
import '@gettymade/construct/styles';
import '../styles/theme.css';
import { Hero } from '../components/Hero';
import { SiteHeader } from '../components/SiteHeader';
import { SiteFooter } from '../components/SiteFooter';
import { DevlogCardGrid } from '../components/DevlogCardGrid';
import { ProjectCardGrid } from '../components/ProjectCardGrid';
import { getCollection } from 'astro:content';

const devlogs = (await getCollection('devlogs'))
  .filter(post => !post.data.isDraft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const latestDevlog = devlogs[0] ? {
  title: devlogs[0].data.title,
  slug: devlogs[0].slug,
  pubDate: devlogs[0].data.pubDate,
} : null;

const allProjects = await getCollection('projects');

// Project lookup for DevlogCard
const projectMap = allProjects.reduce((acc, p) => {
  acc[p.slug] = { slug: p.slug, title: p.data.title.replace(/^Project \d+: /, '') };
  return acc;
}, {} as Record<string, { slug: string; title: string }>);

function resolveProjects(slugs?: string[]) {
  if (!slugs) return undefined;
  return slugs.map(slug => projectMap[slug]).filter(Boolean);
}

// Prepare data for grid components
const recentDevlogsData = devlogs.slice(0, 3).map(post => ({
  title: post.data.title,
  description: post.data.description,
  slug: post.slug,
  weekNumber: post.data.weekNumber,
  pubDate: post.data.pubDate,
  projects: resolveProjects(post.data.projectSlugs),
}));

const projectsData = allProjects
  .sort((a, b) => a.data.monthNumber - b.data.monthNumber)
  .slice(0, 4)
  .map(project => ({
    title: project.data.title,
    description: project.data.description,
    slug: project.slug,
    status: project.data.status,
    month: project.data.month,
    tags: project.data.tags,
  }));
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Year of the Build - Building in public, one project at a time" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Year of the Build</title>
  </head>
  <body>
    <!-- Sticky header - appears after scrolling past hero -->
    <SiteHeader client:load showAfterHero={true} variant="dark" />

    <!-- Full-viewport hero -->
    <Hero latestDevlog={latestDevlog} />

    <!-- Main Content -->
    <main class="main-content">

      <!-- Mission / Intro Section -->
      <section class="intro-section">
        <div class="container">
          <div class="section-label">
            <span>About</span>
          </div>
          <div class="intro-content">
            <div class="intro-text">
              <p class="intro-headline">Building in public. No excuses.</p>
              <p class="intro-body">
                A public accountability log for building and shipping real products.
                No vaporware. No "coming soon" pages that never arrive. Just raw creation,
                documented in real-time. Each week brings progress. The work speaks for itself.
              </p>
              <a href="/about/" class="intro-link">Learn more about the project &rarr;</a>
            </div>
            <div class="intro-stats">
              <div class="stat">
                <span class="stat-number">{allProjects.length}</span>
                <span class="stat-label">Projects</span>
              </div>
              <div class="stat">
                <span class="stat-number">{devlogs.length}</span>
                <span class="stat-label">Devlogs</span>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Latest Devlogs -->
      <section class="devlogs-section">
        <div class="container">
          <div class="section-header">
            <div class="section-label">
              <span>Latest Devlogs</span>
            </div>
            <a href="/devlogs/" class="view-all">View all</a>
          </div>

          {recentDevlogsData.length === 0 ? (
            <p class="empty-state">No devlogs yet. Check back soon!</p>
          ) : (
            <DevlogCardGrid client:visible devlogs={recentDevlogsData} />
          )}
        </div>
      </section>

      <!-- Projects Section -->
      <section class="projects-section">
        <div class="container">
          <div class="section-header">
            <div class="section-label">
              <span>Projects</span>
            </div>
            <a href="/projects/" class="view-all">View all</a>
          </div>

          <ProjectCardGrid client:visible projects={projectsData} columns={4} />
        </div>
      </section>

    </main>

    <!-- Full-width footer -->
    <SiteFooter />
  </body>
</html>

<style>
  body {
    margin: 0;
    padding: 0;
  }

  section {
    padding: var(--t-spacing-2xl) 0;
  }

  /* =============================================================================
     Section Label â€” With extending line (from Codex)
     ============================================================================= */

  .section-label {
    display: flex;
    align-items: center;
    gap: var(--t-spacing-sm);
    font-size: var(--t-font-size-xs);
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--text-muted);
  }

  .section-label::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--border-default);
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--t-spacing-lg);
  }

  .section-header .section-label {
    flex: 1;
    margin-right: var(--t-spacing-lg);
  }

  .view-all {
    font-size: var(--t-font-size-sm);
    font-weight: 500;
    color: var(--text-secondary);
    text-decoration: none;
    white-space: nowrap;
    transition: color 0.2s ease;
  }

  .view-all:hover {
    color: var(--t-primary-600);
  }

  .empty-state {
    color: var(--text-muted);
    padding: var(--t-spacing-xl) 0;
  }

  /* =============================================================================
     Intro Section
     ============================================================================= */

  .intro-section {
    background: var(--bg-canvas);
  }

  .intro-section .section-label {
    margin-bottom: var(--t-spacing-lg);
  }

  .intro-content {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--t-spacing-xl);
    align-items: start;
  }

  .intro-headline {
    font-size: var(--t-font-size-xl);
    font-weight: 700;
    line-height: var(--t-line-height-tight);
    margin-bottom: var(--t-spacing-sm);
    color: var(--text-primary);
  }

  .intro-body {
    font-size: var(--t-font-size-base);
    color: var(--text-secondary);
    line-height: var(--t-line-height-normal);
    margin-bottom: var(--t-spacing-md);
    max-width: 600px;
  }

  .intro-link {
    display: inline-block;
    font-size: var(--t-font-size-sm);
    font-weight: 600;
    color: var(--t-primary-600);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .intro-link:hover {
    color: var(--t-primary-700);
  }

  .intro-stats {
    display: flex;
    gap: var(--t-spacing-lg);
    border-left: 1px solid var(--border-default);
    padding-left: var(--t-spacing-lg);
  }

  .stat {
    padding-left: var(--t-spacing-sm);
    border-left: 2px solid var(--t-primary-600);
  }

  .stat-number {
    display: block;
    font-size: var(--t-font-size-xl);
    font-weight: 700;
    line-height: 1;
    color: var(--text-primary);
  }

  .stat-label {
    font-size: var(--t-font-size-xs);
    font-weight: 500;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* =============================================================================
     Responsive
     ============================================================================= */

  @media (max-width: 900px) {
    .intro-content {
      grid-template-columns: 1fr;
    }

    .intro-stats {
      border-left: none;
      padding-left: 0;
      border-top: 1px solid var(--border-default);
      padding-top: var(--t-spacing-lg);
    }
  }
</style>
