import '../../styles/theme.css';
import { SiteHeader } from '../../components/SiteHeader';
import { SiteFooter } from '../../components/SiteFooter';
import { PageHeader } from '../../components/PageHeader';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { ProjectCardGrid } from '../../components/ProjectCardGrid';
import { getCollection } from 'astro:content';
import { copy } from '../../lib/copy';

const projects = await getCollection('projects');
const devlogs = await getCollection('devlogs');

// Build a map of project slug -> latest devlog date
const latestDevlogByProject = new Map<string, Date>();
for (const devlog of devlogs) {
  const projectSlug = devlog.data.project;
  const pubDate = new Date(devlog.data.pubDate);
  const existing = latestDevlogByProject.get(projectSlug);
  if (!existing || pubDate > existing) {
    latestDevlogByProject.set(projectSlug, pubDate);
  }
}

// Determine if a building project is stale (no devlog ever, or none in 2 weeks)
const TWO_WEEKS_MS = 14 * 24 * 60 * 60 * 1000;
const now = Date.now();

function getDisplayStatus(status: string, lastDevlog: Date | undefined): string {
  // Only building/planning can go stale
  if (status !== 'building' && status !== 'planning') return status;
  if (!lastDevlog) return 'stale';
  if (now - lastDevlog.getTime() > TWO_WEEKS_MS) return 'stale';
  return status;
}

// Sort: launched first, then all in-progress (building/planning/stale) by latest devlog
const sortedProjects = [...projects].sort((a, b) => {
  const aLaunched = a.data.status === 'launched';
  const bLaunched = b.data.status === 'launched';

  // Launched projects come first
  if (aLaunched && !bLaunched) return -1;
  if (!aLaunched && bLaunched) return 1;

  // Within same tier, sort by latest devlog (most recent first)
  const aDate = latestDevlogByProject.get(a.slug)?.getTime() ?? 0;
  const bDate = latestDevlogByProject.get(b.slug)?.getTime() ?? 0;
  return bDate - aDate;
});

// Prepare project data for grid component
const projectsData = sortedProjects.map(project => {
  const lastDevlog = latestDevlogByProject.get(project.slug);
  return {
    title: project.data.title,
    description: project.data.description,
    slug: project.slug,
    status: getDisplayStatus(project.data.status, lastDevlog),
    tags: project.data.tags,
    lastUpdated: lastDevlog?.toISOString(),
  };
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={copy.projects.description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Projects - Year of the Build</title>
  </head>
  <body>
    <SiteHeader client:load variant="light" />

    <Breadcrumbs paths={[{ label: 'Projects' }]} />

    <main class="main-content">
      <PageHeader
        title="Projects"
        description={copy.projects.description}
      />

      <!-- Projects Grid -->
      <section class="projects-section">
        <div class="container">
          {projectsData.length === 0 ? (
            <p class="empty-state">{copy.empty("projects")}</p>
          ) : (
            <ProjectCardGrid client:visible projects={projectsData} columns={4} />
          )}
        </div>
      </section>
    </main>

    <SiteFooter />
  </body>
</html>

<style>
  body {
    margin: 0;
    padding: 0;
    padding-top: var(--header-height, 60px);
  }

  .container {
    max-width: var(--yotb-content-max);
    margin: 0 auto;
    padding: 0 var(--t-spacing-lg);
  }

  /* =============================================================================
     Projects Grid
     ============================================================================= */

  .projects-section {
    padding: var(--t-spacing-xl) 0 var(--t-spacing-2xl);
  }

  .empty-state {
    color: var(--text-muted);
    padding: var(--t-spacing-xl) 0;
  }

  /* =============================================================================
     Responsive
     ============================================================================= */

  @media (max-width: 600px) {
    .container {
      padding: 0 var(--t-spacing-md);
    }

    .projects-section {
      padding: var(--t-spacing-md) 0 var(--t-spacing-lg);
    }
  }
</style>
