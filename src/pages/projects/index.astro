---
// TODO: Uncomment when @gettymade/construct is published to npm
// import '@gettymade/construct/styles';
import '../../styles/theme.css';
import { SiteHeader } from '../../components/SiteHeader';
import { SiteFooter } from '../../components/SiteFooter';
import { PageHeader } from '../../components/PageHeader';
import { ProjectCardGrid } from '../../components/ProjectCardGrid';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');

// Prepare project data for grid component
const projectsData = projects.map(project => ({
  title: project.data.title,
  description: project.data.description,
  slug: project.slug,
  status: project.data.status,
  tags: project.data.tags,
}));

const launchedCount = projects.filter(p => p.data.status === 'launched').length;
const buildingCount = projects.filter(p => p.data.status === 'building').length;
const planningCount = projects.filter(p => p.data.status === 'planning').length;
const progressPercent = ((launchedCount / 12) * 100).toFixed(1);

// Find current building project for progress bar text
const buildingProject = projects.find(p => p.data.status === 'building');
const currentMonthText = buildingProject
  ? `Currently building: ${buildingProject.data.title.replace(/^Project \d+: /, '')}`
  : 'Building in progress.';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Projects built in public - tracking progress and launches" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Projects - Year of the Build</title>
  </head>
  <body>
    <SiteHeader client:load variant="dark" />

    <main class="main-content">
      <PageHeader
        title="All Projects"
        description="12 projects planned for 2025. Each one gets a month of focused building, a public launch, and an honest post-mortem."
      />

      <!-- Progress Section -->
      <section class="progress-section">
        <div class="container">
          <div class="progress-card">
            <div class="progress-inner">
              <div class="progress-info">
                <h3>Year Progress</h3>
                <p>{launchedCount} of 12 projects shipped. {currentMonthText}</p>
              </div>
              <div class="progress-bar-container">
                <div class="progress-bar">
                  <div class="progress-fill" style={`width: ${progressPercent}%;`}></div>
                </div>
                <div class="progress-label">
                  <span>{launchedCount} Shipped</span>
                  <span>{progressPercent}%</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Projects Grid -->
      <section class="projects-section">
        <div class="container">
          {projectsData.length === 0 ? (
            <p class="empty-state">Project list coming soon!</p>
          ) : (
            <ProjectCardGrid client:visible projects={projectsData} columns={4} />
          )}
        </div>
      </section>
    </main>

    <SiteFooter />
  </body>
</html>

<style>
  body {
    margin: 0;
    padding: 0;
  }

  /* =============================================================================
     Progress Section
     ============================================================================= */

  .progress-section {
    padding: var(--t-spacing-lg) 0;
    border-bottom: 1px solid var(--border-default);
  }

  .progress-card {
    background: var(--bg-surface);
    border: 1px solid var(--border-default);
    padding: var(--t-spacing-lg);
  }

  .progress-inner {
    display: grid;
    grid-template-columns: var(--yotb-golden-major) var(--yotb-golden-minor);
    gap: var(--t-spacing-lg);
    align-items: center;
  }

  .progress-info h3 {
    font-size: var(--t-font-size-base);
    font-weight: 600;
    margin-bottom: var(--t-spacing-xs);
    color: var(--text-primary);
  }

  .progress-info p {
    font-size: var(--t-font-size-sm);
    color: var(--text-secondary);
  }

  .progress-bar-container {
    display: flex;
    flex-direction: column;
    gap: var(--t-spacing-sm);
  }

  .progress-bar {
    height: var(--t-spacing-xs);
    background: var(--border-default);
  }

  .progress-fill {
    height: 100%;
    background: var(--t-primary-600);
    transition: width 0.3s ease;
  }

  .progress-label {
    display: flex;
    justify-content: space-between;
    font-size: var(--t-font-size-xs);
    color: var(--text-muted);
  }

  /* =============================================================================
     Projects Grid
     ============================================================================= */

  .projects-section {
    padding: var(--t-spacing-xl) 0 var(--t-spacing-2xl);
  }

  .empty-state {
    color: var(--text-muted);
    padding: var(--t-spacing-xl) 0;
  }

  /* =============================================================================
     Responsive
     ============================================================================= */

  @media (max-width: 900px) {
    .progress-inner {
      grid-template-columns: 1fr;
      gap: var(--t-spacing-md);
    }
  }
</style>
