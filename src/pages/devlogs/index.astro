---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const devlogs = (await getCollection('devlogs'))
  .filter(post => !post.data.isDraft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Devlogs" description="Weekly devlogs documenting the journey of building 12 projects in 12 months">
  <h1>Devlogs</h1>
  <p>Weekly updates on progress, challenges, and learnings.</p>

  {devlogs.length === 0 ? (
    <p>No devlogs yet. Check back soon!</p>
  ) : (
    <ul>
      {devlogs.map((post) => (
        <li>
          <a href={`/devlogs/${post.slug}/`}>
            <span class="week">Week {post.data.weekNumber}</span>
            <h2>{post.data.title}</h2>
            <p>{post.data.description}</p>
            <time datetime={post.data.pubDate.toISOString()}>
              {post.data.pubDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          </a>
        </li>
      ))}
    </ul>
  )}
</BaseLayout>

<style>
  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  h1 + p {
    color: #666;
    font-size: 1.125rem;
    margin-bottom: 2rem;
  }

  ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  li a {
    display: block;
    padding: 1.5rem;
    border: 1px solid #ccc;
    text-decoration: none;
    color: inherit;
  }

  li a:hover {
    border-color: #000;
  }

  .week {
    display: block;
    font-size: 0.875rem;
    color: #999;
    margin-bottom: 0.5rem;
  }

  h2 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  p {
    color: #666;
    margin-bottom: 0.5rem;
  }

  time {
    font-size: 0.875rem;
    color: #999;
  }
</style>
