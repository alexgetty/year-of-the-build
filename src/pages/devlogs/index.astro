---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const devlogs = (await getCollection('devlogs'))
  .filter(post => !post.data.isDraft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Devlogs" description="Weekly devlogs documenting the journey of building in public">
  <h1>Devlogs</h1>
  <p class="subtitle">Weekly updates on progress, challenges, and learnings.</p>

  {devlogs.length === 0 ? (
    <p class="empty">No devlogs yet. Check back soon!</p>
  ) : (
    <ul class="devlog-list">
      {devlogs.map((post) => (
        <li>
          <a href={`/devlogs/${post.slug}/`} class="devlog-item">
            <span class="week">Week {post.data.weekNumber}</span>
            <h2>{post.data.title}</h2>
            <p>{post.data.description}</p>
            <time datetime={post.data.pubDate.toISOString()}>
              {post.data.pubDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          </a>
        </li>
      ))}
    </ul>
  )}
</BaseLayout>

<style>
  h1 {
    font-size: var(--t-font-size-xl);
    font-weight: 700;
    margin-bottom: var(--t-spacing-xs);
  }

  .subtitle {
    color: var(--text-secondary);
    font-size: var(--t-font-size-base);
    margin-bottom: var(--t-spacing-xl);
  }

  .empty {
    color: var(--text-muted);
  }

  .devlog-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--t-spacing-md);
  }

  .devlog-item {
    display: block;
    padding: var(--t-spacing-lg);
    border: 1px solid var(--border-default);
    text-decoration: none;
    color: inherit;
    transition: border-color 0.2s ease;
  }

  .devlog-item:hover {
    border-color: var(--t-primary-600);
  }

  .week {
    display: block;
    font-size: var(--t-font-size-xs);
    font-weight: 600;
    color: var(--t-primary-600);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--t-spacing-xs);
  }

  h2 {
    font-size: var(--t-font-size-lg);
    font-weight: 700;
    margin-bottom: var(--t-spacing-xs);
  }

  p {
    color: var(--text-secondary);
    margin-bottom: var(--t-spacing-xs);
    line-height: var(--t-line-height-normal);
  }

  time {
    font-size: var(--t-font-size-xs);
    color: var(--text-muted);
  }
</style>
