import '../../styles/theme.css';
import { SiteHeader } from '../../components/SiteHeader';
import { SiteFooter } from '../../components/SiteFooter';
import { PageHeader } from '../../components/PageHeader';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { DevlogTimeline } from '../../components/DevlogTimeline';
import { getCollection } from 'astro:content';
import { copy } from '../../lib/copy';

const devlogs = (await getCollection('devlogs'))
  .filter(post => !post.data.isDraft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Get project lookup for resolving project slug
const allProjects = await getCollection('projects');
const projectMap = allProjects.reduce((acc, p) => {
  acc[p.slug] = { slug: p.slug, title: p.data.title.replace(/^Project \d+: /, '') };
  return acc;
}, {} as Record<string, { slug: string; title: string }>);

// Helper to resolve project slug to project object
function resolveProject(slug?: string) {
  if (!slug) return undefined;
  const project = projectMap[slug];
  return project ? [project] : undefined;
}

// Calculate entry numbers (oldest = 1, newest = highest)
const totalDevlogs = devlogs.length;
const entryNumberMap = new Map<string, number>();
[...devlogs].reverse().forEach((post, index) => {
  entryNumberMap.set(post.slug, index + 1);
});

// Prepare devlog data for timeline component
function prepareDevlogData(posts: typeof devlogs) {
  return posts.map(post => ({
    title: post.data.title,
    description: post.data.description,
    slug: post.slug,
    entryNumber: entryNumberMap.get(post.slug) ?? 1,
    pubDate: post.data.pubDate,
    projects: resolveProject(post.data.project),
  }));
}

// Group devlogs by month
const groupedByMonth = devlogs.reduce((acc, post) => {
  const monthKey = post.data.pubDate.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    timeZone: 'UTC',
  });
  if (!acc[monthKey]) {
    acc[monthKey] = [];
  }
  acc[monthKey].push(post);
  return acc;
}, {} as Record<string, typeof devlogs>);

const months = Object.keys(groupedByMonth);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={copy.devlogs.description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Devlog - Year of the Build</title>
  </head>
  <body>
    <SiteHeader client:load variant="light" />

    <Breadcrumbs paths={[{ label: 'Devlogs' }]} />

    <main class="main-content">
      <PageHeader
        title="Devlogs"
        description={copy.devlogs.description}
      />

      <!-- Timeline Section -->
      <section class="timeline-section">
        <div class="container">
          {devlogs.length === 0 ? (
            <p class="empty-state">{copy.empty("devlogs")}</p>
          ) : (
            <div class="timeline-layout">
              <!-- Month Navigation -->
              <aside class="timeline-nav">
                <nav class="month-nav" aria-label="Jump to month">
                  {months.map((month, i) => (
                    <a
                      href={`#${month.toLowerCase().replace(' ', '-')}`}
                      class={`month-link ${i === 0 ? 'active' : ''}`}
                    >
                      {month}
                    </a>
                  ))}
                </nav>
              </aside>

              <!-- Timeline Content -->
              <div class="timeline-content">
                <div class="timeline-line" aria-hidden="true"></div>

                {months.map((month) => (
                  <div class="month-group" id={month.toLowerCase().replace(' ', '-')}>
                    <div class="month-header">
                      <h2 class="month-title">{month}</h2>
                      <span class="month-count">{groupedByMonth[month].length} {groupedByMonth[month].length === 1 ? 'entry' : 'entries'}</span>
                    </div>
                    <DevlogTimeline
                      client:visible
                      devlogs={prepareDevlogData(groupedByMonth[month])}
                    />
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      </section>
    </main>

    <SiteFooter />
  </body>
</html>

<style>
  body {
    margin: 0;
    padding: 0;
    padding-top: var(--header-height, 60px);
  }

  .container {
    max-width: var(--yotb-content-max);
    margin: 0 auto;
    padding: 0 var(--t-spacing-lg);
  }

  /* =============================================================================
     Timeline Section
     ============================================================================= */

  .timeline-section {
    padding: var(--t-spacing-xl) 0 var(--t-spacing-2xl);
  }

  .empty-state {
    color: var(--text-muted);
    padding: var(--t-spacing-xl) 0;
  }

  .timeline-layout {
    display: grid;
    grid-template-columns: 140px 1fr;
    gap: var(--t-spacing-xl);
  }

  /* =============================================================================
     Month Navigation (Sidebar)
     ============================================================================= */

  .timeline-nav {
    position: sticky;
    top: calc(var(--header-height) + var(--t-spacing-lg));
    height: fit-content;
  }

  .month-nav {
    display: flex;
    flex-direction: column;
    gap: var(--t-spacing-xs);
  }

  .month-link {
    font-size: var(--t-font-size-sm);
    font-weight: 500;
    color: var(--text-muted);
    text-decoration: none;
    padding: var(--t-spacing-xs) 0;
    padding-left: var(--t-spacing-sm);
    border-left: 1px solid transparent;
    transition: all 0.2s ease;
  }

  .month-link:hover {
    color: var(--text-primary);
    border-color: var(--border-default);
  }

  .month-link.active {
    color: var(--yotb-amber);
    border-color: var(--yotb-amber);
    font-weight: 600;
  }

  /* =============================================================================
     Timeline Content
     ============================================================================= */

  .timeline-content {
    position: relative;
  }

  .timeline-line {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 1px;
    background: var(--border-default);
  }

  .month-group {
    margin-bottom: var(--t-spacing-2xl);
  }

  .month-group:last-child {
    margin-bottom: 0;
  }

  .month-header {
    display: flex;
    align-items: baseline;
    gap: var(--t-spacing-md);
    margin-bottom: var(--t-spacing-lg);
    padding-left: var(--t-spacing-lg);
    position: relative;
  }

  .month-header::before {
    content: '';
    position: absolute;
    left: -3px;
    top: 50%;
    transform: translateY(-50%);
    width: 7px;
    height: 7px;
    background: var(--bg-canvas);
    border: 1px solid var(--yotb-amber);
    border-radius: 50%;
  }

  .month-title {
    font-size: var(--t-font-size-xs);
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-muted);
  }

  .month-count {
    font-size: var(--t-font-size-xs);
    font-weight: 500;
    color: var(--text-muted);
  }

  /* =============================================================================
     Responsive
     ============================================================================= */

  @media (max-width: 900px) {
    .timeline-layout {
      grid-template-columns: 1fr;
    }

    .timeline-nav {
      display: none;
    }

    .timeline-line {
      display: none;
    }

    .month-header::before {
      display: none;
    }

    .month-header {
      padding-left: 0;
    }
  }

  @media (max-width: 600px) {
    .container {
      padding: 0 var(--t-spacing-md);
    }

    .timeline-section {
      padding: var(--t-spacing-md) 0 var(--t-spacing-lg);
    }
  }

</style>

<script>
  // Highlight active month in navigation based on scroll position
  document.addEventListener('DOMContentLoaded', () => {
    const monthGroups = document.querySelectorAll('.month-group');
    const monthLinks = document.querySelectorAll('.month-link');

    if (monthGroups.length === 0 || monthLinks.length === 0) return;

    const observerOptions = {
      rootMargin: '-20% 0px -70% 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const id = entry.target.id;
          monthLinks.forEach(link => {
            link.classList.remove('active');
            if (link.getAttribute('href') === '#' + id) {
              link.classList.add('active');
            }
          });
        }
      });
    }, observerOptions);

    monthGroups.forEach(group => observer.observe(group));
  });
</script>
