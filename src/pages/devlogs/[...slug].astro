---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const devlogs = await getCollection('devlogs');
  return devlogs.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article>
    <header>
      <div class="meta">
        <time datetime={post.data.pubDate.toISOString()}>
          {post.data.pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            timeZone: 'UTC',
          })}
        </time>
      </div>
      <h1>{post.data.title}</h1>
    </header>

    <div class="content">
      <Content />
    </div>

    <footer>
      <a href="/devlogs/">&larr; Back to all devlogs</a>
    </footer>
  </article>
</BaseLayout>

<style>
  article {
    max-width: 720px;
  }

  header {
    margin-bottom: var(--t-spacing-xl);
    padding-bottom: var(--t-spacing-lg);
    border-bottom: 1px solid var(--border-default);
  }

  .meta {
    display: flex;
    align-items: center;
    gap: var(--t-spacing-sm);
    margin-bottom: var(--t-spacing-xs);
  }

  .meta time {
    font-size: var(--t-font-size-sm);
    color: var(--text-muted);
  }

  h1 {
    font-size: var(--t-font-size-xl);
    font-weight: 700;
    line-height: var(--t-line-height-tight);
    color: var(--text-primary);
    margin: 0;
  }

  .content {
    margin-bottom: var(--t-spacing-xl);
  }

  .content :global(h2) {
    font-size: var(--t-font-size-lg);
    font-weight: 600;
    margin-top: var(--t-spacing-xl);
    margin-bottom: var(--t-spacing-md);
    color: var(--text-primary);
  }

  .content :global(h3) {
    font-size: var(--t-font-size-base);
    font-weight: 600;
    margin-top: var(--t-spacing-lg);
    margin-bottom: var(--t-spacing-sm);
    color: var(--text-primary);
  }

  .content :global(p) {
    margin-bottom: var(--t-spacing-md);
    color: var(--text-secondary);
  }

  .content :global(ul),
  .content :global(ol) {
    margin-bottom: var(--t-spacing-md);
    padding-left: var(--t-spacing-lg);
    color: var(--text-secondary);
  }

  .content :global(li) {
    margin-bottom: var(--t-spacing-xs);
  }

  .content :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }

  .content :global(code) {
    background: var(--bg-muted);
    padding: 0.125rem 0.375rem;
    border-radius: var(--t-radius-sm);
    font-family: 'SF Mono', 'Fira Code', monospace;
    font-size: 0.875em;
  }

  .content :global(pre) {
    background: var(--bg-muted);
    padding: var(--t-spacing-md);
    border-radius: var(--t-radius-md);
    overflow-x: auto;
    margin-bottom: var(--t-spacing-md);
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
  }

  .content :global(hr) {
    border: none;
    border-top: 1px solid var(--border-default);
    margin: var(--t-spacing-xl) 0;
  }

  footer {
    padding-top: var(--t-spacing-lg);
    border-top: 1px solid var(--border-default);
  }

  footer a {
    font-size: var(--t-font-size-sm);
    color: var(--text-muted);
    text-decoration: none;
  }

  footer a:hover {
    color: var(--text-primary);
  }
</style>
