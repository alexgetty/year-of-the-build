---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { ProjectCard } from '../../components/ProjectCard';
import { DigestCard } from '../../components/DigestCard';
import { Lightbox } from '../../components/Lightbox/Lightbox';
import SidebarFigures from '../../components/SidebarFigures.astro';
import { getCollection } from 'astro:content';
import { findDigestForDate, getDevlogsForDigest } from '../../lib/digest-utils';

export async function getStaticPaths() {
  const devlogs = await getCollection('devlogs');
  return devlogs.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();

// Get the associated project
const allProjects = await getCollection('projects');
const project = allProjects.find(p => p.slug === post.data.project);

// Get the digest this devlog appears in
const allDigests = (await getCollection('digests'))
  .filter(d => !d.data.isDraft)
  .sort((a, b) => a.data.pubDate.getTime() - b.data.pubDate.getTime());
const containingDigest = findDigestForDate(post.data.pubDate, allDigests);

// Calculate digest entry number and projects if we have a containing digest
let digestEntryNumber = 1;
let digestProjects: { slug: string; title: string }[] = [];
if (containingDigest) {
  digestEntryNumber = allDigests.findIndex(d => d.slug === containingDigest.slug) + 1;

  // Get projects covered by this digest
  const allDevlogs = (await getCollection('devlogs')).filter(d => !d.data.isDraft);
  const digestDevlogs = getDevlogsForDigest(containingDigest.data.pubDate, allDevlogs);
  const projectSlugs = [...new Set(digestDevlogs.map(d => d.data.project))];
  digestProjects = projectSlugs
    .map(slug => {
      const p = allProjects.find(proj => proj.slug === slug);
      return p ? { slug: p.slug, title: p.data.title } : null;
    })
    .filter((p): p is { slug: string; title: string } => p !== null);
}
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
  breadcrumbs={[
    { label: 'Devlogs', href: '/devlogs/' },
    { label: post.data.title }
  ]}
>
  <article class={project ? 'article--with-sidebar' : ''}>
    <header>
      <div class="meta">
        <time datetime={post.data.pubDate.toISOString()}>
          {post.data.pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            timeZone: 'UTC',
          })}
        </time>
        {project && (
          <>
            <span class="meta-separator">Â·</span>
            <a href={`/projects/${project.slug}/`} class="project-link">
              {project.data.title}
            </a>
          </>
        )}
      </div>
      <h1>{post.data.title}</h1>
    </header>

    <div class={project ? 'body body--with-sidebar' : 'body'}>
      <div class="content">
        <Content />
      </div>

      {project && (
        <aside class="sidebar">
          <div class="sidebar-block">
            <div class="sidebar-label">Project</div>
            <ProjectCard
              title={project.data.title}
              description={project.data.description}
              slug={project.slug}
              status={project.data.status}
              tags={project.data.tags}
            />
          </div>
          {containingDigest && (
            <div class="sidebar-block">
              <div class="sidebar-label">Appears In</div>
              <DigestCard
                title={containingDigest.data.title}
                description={containingDigest.data.description}
                slug={containingDigest.slug}
                entryNumber={digestEntryNumber}
                pubDate={containingDigest.data.pubDate}
                projects={digestProjects}
              />
            </div>
          )}
          <SidebarFigures />
        </aside>
      )}
    </div>

    <footer>
      <a href="/devlogs/">&larr; Back to all devlogs</a>
    </footer>
  </article>
  <Lightbox client:load />
</BaseLayout>

<style>
  article {
    max-width: 720px;
    padding-bottom: var(--t-spacing-2xl);
  }

  article.article--with-sidebar {
    max-width: none;
  }

  header {
    min-height: var(--page-header-min-height);
    padding: var(--page-header-padding-top) 0 var(--page-header-padding-bottom);
    margin-bottom: var(--t-spacing-lg);
    border-bottom: 1px solid var(--border-default);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .meta {
    display: flex;
    align-items: center;
    gap: var(--t-spacing-sm);
    margin-bottom: var(--t-spacing-xs);
  }

  .meta time {
    font-size: var(--t-font-size-sm);
    color: var(--text-muted);
  }

  .meta-separator {
    color: var(--text-muted);
    opacity: 0.5;
  }

  .project-link {
    font-size: var(--t-font-size-sm);
    font-weight: 500;
    color: var(--t-primary-600);
    text-decoration: none;
  }

  .project-link:hover {
    color: var(--t-primary-700);
  }

  h1 {
    font-size: var(--t-font-size-xl);
    font-weight: 700;
    line-height: var(--t-line-height-tight);
    color: var(--text-primary);
    margin: 0;
  }

  /* Body layout */
  .body {
    margin-bottom: var(--t-spacing-xl);
  }

  .body--with-sidebar {
    display: grid;
    grid-template-columns: var(--yotb-golden-major) var(--yotb-golden-minor);
    gap: var(--t-spacing-xl);
  }

  .content {
    min-width: 0; /* Prevent grid blowout */
  }

  .content :global(h2) {
    font-size: var(--t-font-size-lg);
    font-weight: 600;
    margin-top: var(--t-spacing-xl);
    margin-bottom: var(--t-spacing-md);
    color: var(--text-primary);
  }

  .content :global(h3) {
    font-size: var(--t-font-size-md);
    font-weight: 600;
    margin-top: var(--t-spacing-lg);
    margin-bottom: var(--t-spacing-sm);
    color: var(--text-primary);
  }

  .content :global(p) {
    margin-bottom: var(--t-spacing-md);
    color: var(--text-secondary);
  }

  .content :global(ul),
  .content :global(ol) {
    margin-bottom: var(--t-spacing-md);
    padding-left: var(--t-spacing-lg);
    color: var(--text-secondary);
  }

  .content :global(li) {
    margin-bottom: var(--t-spacing-xs);
  }

  .content :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }

  .content :global(code) {
    background: var(--bg-muted);
    padding: 0.125rem 0.375rem;
    border-radius: var(--t-radius-sm);
    font-family: 'SF Mono', 'Fira Code', monospace;
    font-size: 0.875em;
  }

  .content :global(pre) {
    background: var(--bg-muted);
    padding: var(--t-spacing-md);
    border-radius: var(--t-radius-md);
    overflow-x: auto;
    margin-bottom: var(--t-spacing-md);
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
  }

  .content :global(hr) {
    border: none;
    border-top: 1px solid var(--border-default);
    margin: var(--t-spacing-xl) 0;
  }

  /* Sidebar */
  .sidebar {
    align-self: start;
    position: sticky;
    top: calc(var(--header-height, 60px) + var(--t-spacing-lg));
  }

  .sidebar-block {
    margin-bottom: var(--t-spacing-lg);
  }

  .sidebar-label {
    font-size: var(--t-font-size-xs);
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-muted);
    margin-bottom: var(--t-spacing-sm);
  }

  /* Responsive */
  @media (max-width: 900px) {
    article.article--with-sidebar {
      max-width: 720px;
    }

    .body--with-sidebar {
      display: block;
    }

    .sidebar {
      display: none;
    }
  }

  footer {
    padding-top: var(--t-spacing-lg);
    border-top: 1px solid var(--border-default);
  }

  footer a {
    font-size: var(--t-font-size-sm);
    color: var(--text-muted);
    text-decoration: none;
  }

  footer a:hover {
    color: var(--text-primary);
  }
</style>
