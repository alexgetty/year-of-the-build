import '../../styles/theme.css';
import { SiteHeader } from '../../components/SiteHeader';
import { SiteFooter } from '../../components/SiteFooter';
import { PageHeader } from '../../components/PageHeader';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { DigestTimeline } from '../../components/DigestTimeline';
import { getCollection } from 'astro:content';
import { copy } from '../../lib/copy';

const digests = (await getCollection('digests'))
  .filter(post => !post.data.isDraft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Calculate entry numbers (oldest = 1, newest = highest)
const digestEntryNumberMap = new Map<string, number>();
[...digests].reverse().forEach((post, index) => {
  digestEntryNumberMap.set(post.slug, index + 1);
});

const devlogs = (await getCollection('devlogs'))
  .filter(post => !post.data.isDraft);

const allProjects = await getCollection('projects');

// Project lookup for resolving slugs to titles
const projectMap = allProjects.reduce((acc, p) => {
  acc[p.slug] = { slug: p.slug, title: p.data.title.replace(/^Project \d+: /, '') };
  return acc;
}, {} as Record<string, { slug: string; title: string }>);

// Get projects covered in a digest's week (7 days ending on pubDate)
function getDigestProjects(digestPubDate: Date) {
  const endDate = new Date(digestPubDate);
  const startDate = new Date(digestPubDate);
  startDate.setDate(startDate.getDate() - 6);

  const projectSlugs = new Set<string>();
  devlogs.forEach(devlog => {
    const devlogDate = devlog.data.pubDate;
    if (devlogDate >= startDate && devlogDate <= endDate && devlog.data.project) {
      projectSlugs.add(devlog.data.project);
    }
  });

  return Array.from(projectSlugs)
    .map(slug => projectMap[slug])
    .filter(Boolean);
}

// Prepare digest data for timeline component
function prepareDigestData(posts: typeof digests) {
  return posts.map(post => ({
    title: post.data.title,
    description: post.data.description,
    slug: post.slug,
    entryNumber: digestEntryNumberMap.get(post.slug) ?? 1,
    pubDate: post.data.pubDate,
    projects: getDigestProjects(post.data.pubDate),
  }));
}

// Group digests by month
const groupedByMonth = digests.reduce((acc, post) => {
  const monthKey = post.data.pubDate.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    timeZone: 'UTC',
  });
  if (!acc[monthKey]) {
    acc[monthKey] = [];
  }
  acc[monthKey].push(post);
  return acc;
}, {} as Record<string, typeof digests>);

const months = Object.keys(groupedByMonth);

// Get unique projects that appear in any digest (for filter dropdown)
const allDigestProjects = new Set<string>();
digests.forEach(digest => {
  const projects = getDigestProjects(digest.data.pubDate);
  projects.forEach(p => allDigestProjects.add(p.slug));
});
const projectsWithDigests = Array.from(allDigestProjects)
  .map(slug => projectMap[slug])
  .filter(Boolean)
  .sort((a, b) => a.title.localeCompare(b.title));

// Build digest -> projects mapping for client-side filtering
const digestProjectsMap = Object.fromEntries(
  digests.map(d => [d.slug, getDigestProjects(d.data.pubDate).map(p => p.slug)])
);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={copy.digests.description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Digests - Year of the Build</title>
  </head>
  <body>
    <SiteHeader client:load variant="light" />

    <Breadcrumbs paths={[{ label: 'Digests' }]} />

    <main class="main-content">
      <PageHeader
        title="Digests"
        description={copy.digests.description}
        cta={copy.digests.cta}
        ctaHref="https://yotb.beehiiv.com"
      />

      <!-- Filter Bar -->
      {projectsWithDigests.length > 1 && (
        <section class="filter-bar">
          <div class="container">
            <div class="filter-group">
              <label for="project-filter" class="filter-label">Filter by project</label>
              <select id="project-filter" class="filter-select">
                <option value="">All projects</option>
                {projectsWithDigests.map(p => (
                  <option value={p.slug}>{p.title}</option>
                ))}
              </select>
            </div>
            <button id="clear-filter" class="clear-filter" style="display: none;">
              Clear filter
            </button>
          </div>
        </section>
      )}

      <!-- Timeline Section -->
      <section class="timeline-section">
        <div class="container">
          {digests.length === 0 ? (
            <p class="empty-state">{copy.empty("digests")}</p>
          ) : (
            <div class="timeline-layout">
              <!-- Month Navigation -->
              <aside class="timeline-nav">
                <nav class="month-nav" aria-label="Jump to month">
                  {months.map((month, i) => (
                    <a
                      href={`#${month.toLowerCase().replace(' ', '-')}`}
                      class={`month-link ${i === 0 ? 'active' : ''}`}
                    >
                      {month}
                    </a>
                  ))}
                </nav>
              </aside>

              <!-- Timeline Content -->
              <div class="timeline-content">
                <div class="timeline-line" aria-hidden="true"></div>

                {months.map((month) => (
                  <div class="month-group" id={month.toLowerCase().replace(' ', '-')}>
                    <div class="month-header">
                      <h2 class="month-title">{month}</h2>
                      <span class="month-count">{groupedByMonth[month].length} {groupedByMonth[month].length === 1 ? 'digest' : 'digests'}</span>
                    </div>
                    <DigestTimeline
                      client:visible
                      digests={prepareDigestData(groupedByMonth[month])}
                    />
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      </section>
    </main>

    <SiteFooter />
  </body>
</html>

<style>
  body {
    margin: 0;
    padding: 0;
    padding-top: var(--header-height, 60px);
  }

  .container {
    max-width: var(--yotb-content-max);
    margin: 0 auto;
    padding: 0 var(--t-spacing-lg);
  }

  /* =============================================================================
     Timeline Section
     ============================================================================= */

  .timeline-section {
    padding: var(--t-spacing-xl) 0 var(--t-spacing-2xl);
  }

  .empty-state {
    color: var(--text-muted);
    padding: var(--t-spacing-xl) 0;
  }

  .timeline-layout {
    display: grid;
    grid-template-columns: 140px 1fr;
    gap: var(--t-spacing-xl);
  }

  /* =============================================================================
     Month Navigation (Sidebar)
     ============================================================================= */

  .timeline-nav {
    position: sticky;
    top: calc(var(--header-height) + var(--t-spacing-lg));
    height: fit-content;
  }

  .month-nav {
    display: flex;
    flex-direction: column;
    gap: var(--t-spacing-xs);
  }

  .month-link {
    font-size: var(--t-font-size-sm);
    font-weight: 500;
    color: var(--text-muted);
    text-decoration: none;
    padding: var(--t-spacing-xs) 0;
    padding-left: var(--t-spacing-sm);
    border-left: 1px solid transparent;
    transition: all 0.2s ease;
  }

  .month-link:hover {
    color: var(--text-primary);
    border-color: var(--border-default);
  }

  .month-link.active {
    color: var(--yotb-amber);
    border-color: var(--yotb-amber);
    font-weight: 600;
  }

  /* =============================================================================
     Timeline Content
     ============================================================================= */

  .timeline-content {
    position: relative;
  }

  .timeline-line {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 1px;
    background: var(--border-default);
  }

  .month-group {
    margin-bottom: var(--t-spacing-2xl);
  }

  .month-group:last-child {
    margin-bottom: 0;
  }

  .month-header {
    display: flex;
    align-items: baseline;
    gap: var(--t-spacing-md);
    margin-bottom: var(--t-spacing-lg);
    padding-left: var(--t-spacing-lg);
    position: relative;
  }

  .month-header::before {
    content: '';
    position: absolute;
    left: -3px;
    top: 50%;
    transform: translateY(-50%);
    width: 7px;
    height: 7px;
    background: var(--bg-canvas);
    border: 1px solid var(--yotb-amber);
    border-radius: 50%;
  }

  .month-title {
    font-size: var(--t-font-size-xs);
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-muted);
  }

  .month-count {
    font-size: var(--t-font-size-xs);
    font-weight: 500;
    color: var(--text-muted);
  }

  /* =============================================================================
     Responsive
     ============================================================================= */

  @media (max-width: 900px) {
    .timeline-layout {
      grid-template-columns: 1fr;
    }

    .timeline-nav {
      display: none;
    }

    .timeline-line {
      display: none;
    }

    .month-header::before {
      display: none;
    }

    .month-header {
      padding-left: 0;
    }
  }

  @media (max-width: 600px) {
    .container {
      padding: 0 var(--t-spacing-md);
    }

    .timeline-section {
      padding: var(--t-spacing-md) 0 var(--t-spacing-lg);
    }
  }

  /* =============================================================================
     Filter Bar
     ============================================================================= */

  .filter-bar {
    border-bottom: 1px solid var(--border-default);
    padding: var(--t-spacing-md) 0;
  }

  .filter-bar .container {
    display: flex;
    align-items: center;
    gap: var(--t-spacing-md);
  }

  .filter-group {
    display: flex;
    align-items: center;
    gap: var(--t-spacing-sm);
  }

  .filter-label {
    font-size: var(--t-font-size-sm);
    font-weight: 500;
    color: var(--text-muted);
  }

  .filter-select {
    font-size: var(--t-font-size-sm);
    font-weight: 500;
    color: var(--text-primary);
    background: var(--bg-canvas);
    border: 1px solid var(--border-default);
    padding: var(--t-spacing-xs) var(--t-spacing-sm);
    border-radius: var(--t-radius-sm);
    cursor: pointer;
    min-width: 160px;
  }

  .filter-select:hover {
    border-color: var(--text-muted);
  }

  .filter-select:focus {
    outline: none;
    border-color: var(--t-primary-600);
  }

  .clear-filter {
    font-size: var(--t-font-size-xs);
    font-weight: 500;
    color: var(--text-muted);
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--t-spacing-xs);
  }

  .clear-filter:hover {
    color: var(--text-primary);
  }

  /* Filter active state */
  .filter-active .month-group {
    display: none;
  }

  .filter-active .month-group.has-matches {
    display: block;
  }

  .filter-active [data-digest-item] {
    display: none;
  }

  .filter-active [data-digest-item].filter-match {
    display: block;
  }

</style>

<script is:inline define:vars={{ digestProjectsMap }}>
  // Digest slug -> project slugs mapping
  window.digestProjectsMap = digestProjectsMap;
</script>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // ==========================================================================
    // Month Navigation (scroll highlighting)
    // ==========================================================================
    const monthGroups = document.querySelectorAll('.month-group');
    const monthLinks = document.querySelectorAll('.month-link');

    if (monthGroups.length > 0 && monthLinks.length > 0) {
      const observerOptions = {
        rootMargin: '-20% 0px -70% 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const id = entry.target.id;
            monthLinks.forEach(link => {
              link.classList.remove('active');
              if (link.getAttribute('href') === '#' + id) {
                link.classList.add('active');
              }
            });
          }
        });
      }, observerOptions);

      monthGroups.forEach(group => observer.observe(group));
    }

    // ==========================================================================
    // Project Filter
    // ==========================================================================
    const filterSelect = document.getElementById('project-filter') as HTMLSelectElement;
    const clearButton = document.getElementById('clear-filter');
    const timelineSection = document.querySelector('.timeline-section');
    const digestProjectsMap = (window as any).digestProjectsMap || {};

    if (!filterSelect || !timelineSection) return;

    // Get all digest items and tag them with data attributes
    const digestItems = timelineSection.querySelectorAll('[class*="item"]');
    digestItems.forEach(item => {
      const link = item.querySelector('a[href^="/digests/"]');
      if (link) {
        const href = link.getAttribute('href') || '';
        const match = href.match(/\/digests\/([^/]+)/);
        if (match) {
          const slug = match[1];
          const projectSlugs = digestProjectsMap[slug];
          if (projectSlugs) {
            item.setAttribute('data-digest-item', slug);
            item.setAttribute('data-projects', projectSlugs.join(','));
          }
        }
      }
    });

    function applyFilter(projectSlug: string) {
      if (!projectSlug) {
        // Clear filter
        timelineSection.classList.remove('filter-active');
        monthGroups.forEach(group => group.classList.remove('has-matches'));
        digestItems.forEach(item => item.classList.remove('filter-match'));
        if (clearButton) clearButton.style.display = 'none';

        // Update URL
        const url = new URL(window.location.href);
        url.searchParams.delete('project');
        window.history.replaceState({}, '', url.toString());
        return;
      }

      // Apply filter
      timelineSection.classList.add('filter-active');
      if (clearButton) clearButton.style.display = 'block';

      // Mark matching items (digests that include this project)
      digestItems.forEach(item => {
        const projects = item.getAttribute('data-projects')?.split(',') || [];
        if (projects.includes(projectSlug)) {
          item.classList.add('filter-match');
        } else {
          item.classList.remove('filter-match');
        }
      });

      // Show month groups that have matches
      monthGroups.forEach(group => {
        const hasMatch = group.querySelector('[data-digest-item].filter-match');
        if (hasMatch) {
          group.classList.add('has-matches');
        } else {
          group.classList.remove('has-matches');
        }
      });

      // Update URL
      const url = new URL(window.location.href);
      url.searchParams.set('project', projectSlug);
      window.history.replaceState({}, '', url.toString());
    }

    // Handle filter change
    filterSelect.addEventListener('change', () => {
      applyFilter(filterSelect.value);
    });

    // Handle clear button
    if (clearButton) {
      clearButton.addEventListener('click', () => {
        filterSelect.value = '';
        applyFilter('');
      });
    }

    // Apply filter from URL on load
    const urlParams = new URLSearchParams(window.location.search);
    const projectParam = urlParams.get('project');
    if (projectParam) {
      filterSelect.value = projectParam;
      applyFilter(projectParam);
    }
  });
</script>
