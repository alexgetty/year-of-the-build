---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { getDevlogsForDigest } from '../../lib/digest-utils';

export async function getStaticPaths() {
  const digests = await getCollection('digests');
  return digests.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();

const formattedDate = post.data.pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
  timeZone: 'UTC',
});

// Get devlogs for this digest's week
const allDevlogs = (await getCollection('devlogs'))
  .filter(d => !d.data.isDraft)
  .sort((a, b) => a.data.pubDate.getTime() - b.data.pubDate.getTime());

const allProjects = await getCollection('projects');
const weekDevlogs = getDevlogsForDigest(post.data.pubDate, allDevlogs);

// Build sidebar items with project info
const devlogItems = weekDevlogs.map(devlog => {
  const project = allProjects.find(p => p.slug === devlog.data.project);
  return {
    slug: devlog.slug,
    title: devlog.data.title,
    weekday: devlog.data.pubDate.toLocaleDateString('en-US', {
      weekday: 'short',
      timeZone: 'UTC',
    }),
    projectTitle: project?.data.title,
    projectSlug: project?.slug,
  };
});

const hasSidebar = weekDevlogs.length > 0;
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
  breadcrumbs={[
    { label: 'Digests', href: '/digests/' },
    { label: post.data.title }
  ]}
>
  <article class={hasSidebar ? 'article--with-sidebar' : ''}>
    <header>
      <div class="meta">
        <time datetime={post.data.pubDate.toISOString()}>
          {formattedDate}
        </time>
        <span class="digest-badge">Weekly Digest</span>
      </div>
      <h1>{post.data.title}</h1>
    </header>

    <div class={hasSidebar ? 'body body--with-sidebar' : 'body'}>
      <div class="content">
        <Content />
      </div>

      {hasSidebar && (
        <aside class="sidebar">
          <div class="sidebar-block">
            <div class="sidebar-label">This Week's Devlogs</div>
            <ul class="devlog-list">
              {devlogItems.map((item) => (
                <li>
                  <span class="devlog-day">{item.weekday}</span>
                  <a href={`/devlogs/${item.slug}/`}>{item.title}</a>
                  {item.projectTitle && (
                    <a href={`/projects/${item.projectSlug}/`} class="project-badge">
                      {item.projectTitle}
                    </a>
                  )}
                </li>
              ))}
            </ul>
          </div>
        </aside>
      )}
    </div>

    <footer>
      <a href="/digests/">&larr; Back to all digests</a>
    </footer>
  </article>
</BaseLayout>

<style>
  article {
    max-width: 720px;
    padding-bottom: var(--t-spacing-2xl);
  }

  article.article--with-sidebar {
    max-width: none;
  }

  header {
    min-height: var(--page-header-min-height);
    padding: var(--page-header-padding-top) 0 var(--page-header-padding-bottom);
    margin-bottom: var(--t-spacing-lg);
    border-bottom: 1px solid var(--border-default);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .meta {
    display: flex;
    align-items: center;
    gap: var(--t-spacing-sm);
    margin-bottom: var(--t-spacing-xs);
  }

  .meta time {
    font-size: var(--t-font-size-sm);
    color: var(--text-muted);
  }

  .digest-badge {
    font-size: var(--t-font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--t-primary-700);
    background: var(--t-primary-50);
    padding: 0.25rem 0.5rem;
    border-radius: var(--t-radius-sm);
  }

  h1 {
    font-size: var(--t-font-size-xl);
    font-weight: 700;
    line-height: var(--t-line-height-tight);
    color: var(--text-primary);
    margin: 0;
  }

  /* Body layout */
  .body {
    margin-bottom: var(--t-spacing-xl);
  }

  .body--with-sidebar {
    display: grid;
    grid-template-columns: var(--yotb-golden-major) var(--yotb-golden-minor);
    gap: var(--t-spacing-xl);
  }

  .content {
    min-width: 0;
  }

  .content :global(h2) {
    font-size: var(--t-font-size-lg);
    font-weight: 600;
    margin-top: var(--t-spacing-xl);
    margin-bottom: var(--t-spacing-md);
    color: var(--text-primary);
  }

  .content :global(h3) {
    font-size: var(--t-font-size-md);
    font-weight: 600;
    margin-top: var(--t-spacing-lg);
    margin-bottom: var(--t-spacing-sm);
    color: var(--text-primary);
  }

  .content :global(p) {
    margin-bottom: var(--t-spacing-md);
    color: var(--text-secondary);
  }

  .content :global(ul),
  .content :global(ol) {
    margin-bottom: var(--t-spacing-md);
    padding-left: var(--t-spacing-lg);
    color: var(--text-secondary);
  }

  .content :global(li) {
    margin-bottom: var(--t-spacing-xs);
  }

  .content :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }

  .content :global(code) {
    background: var(--bg-muted);
    padding: 0.125rem 0.375rem;
    border-radius: var(--t-radius-sm);
    font-family: 'SF Mono', 'Fira Code', monospace;
    font-size: 0.875em;
  }

  .content :global(pre) {
    background: var(--bg-muted);
    padding: var(--t-spacing-md);
    border-radius: var(--t-radius-md);
    overflow-x: auto;
    margin-bottom: var(--t-spacing-md);
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
  }

  .content :global(hr) {
    border: none;
    border-top: 1px solid var(--border-default);
    margin: var(--t-spacing-xl) 0;
  }

  /* Sidebar */
  .sidebar {
    align-self: start;
    position: sticky;
    top: calc(var(--header-height, 60px) + var(--t-spacing-lg));
  }

  .sidebar-block {
    margin-bottom: var(--t-spacing-lg);
  }

  .sidebar-label {
    font-size: var(--t-font-size-xs);
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-muted);
    margin-bottom: var(--t-spacing-sm);
  }

  .devlog-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .devlog-list li {
    display: flex;
    align-items: baseline;
    flex-wrap: wrap;
    gap: var(--t-spacing-xs);
    margin-bottom: var(--t-spacing-sm);
  }

  .devlog-list li:last-child {
    margin-bottom: 0;
  }

  .devlog-day {
    font-size: var(--t-font-size-xs);
    color: var(--text-muted);
    min-width: 2.5rem;
    flex-shrink: 0;
  }

  .devlog-list a {
    font-size: var(--t-font-size-sm);
    font-weight: 500;
    color: var(--text-primary);
    text-decoration: none;
  }

  .devlog-list a:hover {
    color: var(--t-primary-600);
  }

  .project-badge {
    font-size: var(--t-font-size-xs);
    font-weight: 500;
    color: var(--text-secondary);
    background: rgba(28, 25, 23, 0.06);
    padding: 1px 6px;
    text-decoration: none;
    margin-left: auto;
  }

  .project-badge:hover {
    background: rgba(28, 25, 23, 0.1);
    color: var(--text-primary);
  }

  /* Responsive */
  @media (max-width: 900px) {
    article.article--with-sidebar {
      max-width: 720px;
    }

    .body--with-sidebar {
      display: block;
    }

    .sidebar {
      display: none;
    }
  }

  footer {
    padding-top: var(--t-spacing-lg);
    border-top: 1px solid var(--border-default);
  }

  footer a {
    font-size: var(--t-font-size-sm);
    color: var(--text-muted);
    text-decoration: none;
  }

  footer a:hover {
    color: var(--text-primary);
  }
</style>
